{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "es2020",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "incremental": true,
        "outDir": "node_modules/.cache",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": false,
        "lib": [
            "esnext",
            "dom"
        ],
        "paths": {
            "components": [
                "./src/components"
            ],
            "components/*": [
                "./src/components/*"
            ],
            "assets": [
                "./src/assets"
            ],
            "common": [
                "./src/common"
            ],
            "src": [
                "./src"
            ],
            "pages": [
                "./src/pages"
            ],
            "services": [
                "./src/services"
            ],
            "api": [
                "./src/api"
            ],
            "utils": [
                "./src/utils"
            ],
            "stores": [
                "./src/stores"
            ]
        },
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "removeComments": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "vite-plugin-svgr/client"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ],
    "extends": [
        "@vue/tsconfig/tsconfig.json"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
