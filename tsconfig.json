{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "es2020",
        "strict": true,
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "sourceMap": true,
        "incremental": true,
        "outDir": "node_modules/.cache",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": false,
        "lib": [
            "esnext",
            "dom"
        ],
        "paths": {
            "components": [
                "./src/components"
            ],
            "components/*": [
                "./src/components/*"
            ],
            "assets": [
                "./src/assets"
            ],
            "common": [
                "./src/common"
            ],
            "src": [
                "./src"
            ],
            "pages": [
                "./src/pages"
            ],
            "services": [
                "./src/services"
            ],
            "api": [
                "./src/api"
            ],
            "utils": [
                "./src/utils"
            ],
            "stores": [
                "./src/stores"
            ]
        },
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "removeComments": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
    },
    "exclude": [
        "node_modules"
    ]
}
